<p style="color: green"><%= notice %></p>

<div class="container-fluid">
  <div class="row justify-content-center">
    <h3>Schools</h3>
  </div>
</div>

<table class="table" id=schools>
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Address</th>
      <th scope="col">Contact Number</th>
      <th scope="col">Email</th>

    </tr>
  </thead>
  <tbody>
    <% @schools.each do |school| %>
      <tr id="<%= dom_id school %>">
        <%= render school %>
        <td><%= link_to "Edit", edit_school_path(school) %></td>
        <% if current_login.admin? && current_login.loginable.school_admin? %>
          <td><%= link_to "Manage Batches", school_batches_path(school) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New school", new_school_path, class: 'btn btn-primary' %>